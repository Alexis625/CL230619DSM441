<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <TextView
        android:id="@+id/LlbBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenida"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="138dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/iconoandroid" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/LlbNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/TxtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/LlbSalario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salario"
        android:layout_marginTop="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:prefixText="$">

        <EditText
            android:id="@+id/TxtSalario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/BtnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enviar"
        android:textAllCaps="false"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/LlbResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultado"
        android:textSize="18sp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/LlbISSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/isss"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/LlbAFP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/afp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/LlbRenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/renta"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/LlbSalarioTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salariototal"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>

